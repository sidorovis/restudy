<h1>Listing words</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Word group</th>
    <th>Word type</th>
  </tr>

<% for word in @words %>
  <tr>
    <td><%= link_to h(word.content), word %></td>
    <td><%= link_to h(word.word_group.title), word.word_group %>
          (<%=h word.word_group.template %>)</td>
    <td><%= link_to h(word.word_type.title), word.word_type %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


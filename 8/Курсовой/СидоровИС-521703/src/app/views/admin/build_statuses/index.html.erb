<h1>Список статусов версий</h1>

<% @build_statuses.each do |build_status| %>
	<b><%=h build_status.title %></b><br>
	<%=h(build_status.description).split("\n").join("<br/>") %><br/>
	<%= link_to 'Отобразить', admin_build_status_path(build_status) %> | 
	<%= link_to 'Редактировать', edit_admin_build_status_path(build_status) %> |
	<%= link_to 'Удалить', admin_build_status_path(build_status), 
						:confirm => 'Are you sure?', 
						:method => :delete %>
<hr/>
<% end %>
<%= link_to 'Новый статус версии', new_admin_build_status_path %>
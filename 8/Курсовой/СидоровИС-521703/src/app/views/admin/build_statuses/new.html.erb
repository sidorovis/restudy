<h1>Новый статус версий</h1>

<% form_for(@build_status,:url=>{:action=>:create}) do |f| %>
  <%= solve_errors(f) %>

  <p>
    <%= f.label :Название %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Описание %><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <p>
    <%= f.submit 'Создать' %>
  </p>
<% end %>

<%= link_to 'К списку', admin_build_statuses_path %>
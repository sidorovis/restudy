<h1>Редактирование статуса новых возможностей</h1>

<% form_for(@issue_status,:url=>{:action=>"update"}) do |f| %>
  <%= solve_errors( f ) %>
  <p>
    <%= f.label :Название %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Описание %><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <p>
    <%= f.submit 'Обновить' %>
  </p>
<% end %>

<%= link_to 'Отобразить', admin_issue_status_path(@issue_status) %> |
<%= link_to 'К списку', admin_issue_statuses_path %>
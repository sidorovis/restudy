<h1>Добавить пользователя на проект</h1>

<% form_for(@role,:url=>{:action=>"create"}) do |f| %>
  <%= solve_errors( f ) %>
  <p>
    <%= f.label :Название %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Описание %><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <p>
    <%= f.label :Проект %><br />
    <%= f.select :project_id, Project.all.collect { |project| [project.title,project.id] } %>
  </p>
  <p>
    <%= f.label :Пользователь %><br />
    <%= f.select :user_id, User.all.collect { |user| [user.login,user.id] } %>
  </p>
  <p>
    <%= f.label :Шаблон_роли %><br />
    <%= f.select :role_template_id, RoleTemplate.all.collect { |role| [role.title,role.id] } %>
  </p>
  <p>
    <%= f.submit 'Добавить' %>
  </p>
<% end %>

<%= link_to 'К списку', admin_roles_path %>
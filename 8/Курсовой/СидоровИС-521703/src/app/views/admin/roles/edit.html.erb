<h1>Изменить данные роли</h1>

<% form_for(@role, :url=>{:action=>'update'}) do |f| %>
  <%= solve_errors( f ) %>
  <p>
    <%= f.label :Название %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Описание %><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <p>
    <%= f.label :Проект %><br />
    <%= f.select :project_id, Project.all.collect { |project| [project.title,project.id] } %>
  </p>
  <p>
    <%= f.label :Пользователь %><br />
    <%= f.select :user_id, User.all.collect { |user| [user.login,user.id] } %>
  </p>
  <p>
    <%= f.submit 'Обновить' %>
  </p>
<% end %>

<%= link_to 'Отобразить', admin_role_path(@role) %> |
<%= link_to 'К списку', admin_roles_path %>
<h1>Новый проект</h1>

<% form_for(@project,:url=>{:action=>'create'}) do |f| %>
  <%= solve_errors( f ) %>
  <p>
    <%= f.label :Название %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Описание %><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <p>
    <%= f.label :Статус_проекта %><br />
	<%= f.select :project_status_id, ProjectStatus.all.map { |i| [i.title, i.id] } %>
  </p>
  <p>
    <%= f.label :Менеджер_проекта %><br />
	<%= collection_select :role, :user_id, User.all, :id, :login %>
  </p>
  <p>
    <%= f.submit 'Создать' %>
  </p>
<% end %>

<%= link_to 'В список', admin_projects_path %>
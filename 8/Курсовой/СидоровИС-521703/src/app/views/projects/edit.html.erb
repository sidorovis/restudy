<h1>Изменение проекта</h1>

<% form_for(@project) do |f| %>
  <%= solve_errors( f ) %>
  <p>
    <%= f.label :Название %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Описание %><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <p>
    <%= f.label :Статус_проекта %><br />
	<%= f.select :project_status_id, ProjectStatus.all.map { |i| [i.title, i.id] } %>
  </p>
  <p>
    <%= f.submit 'Обновить' %>
  </p>
<% end %>

<%= link_to 'Показать', @project %> |
<%= link_to 'Список проектов', projects_path %>
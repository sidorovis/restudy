<h1>Изменение задания по проекту '<%= @project.title %>'</h1>

<% form_for([@project,@task]) do |f| %>
  <%= solve_errors( f ) %>  <p>
    <%= f.label :Название %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Описание %><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <p>
    <%= f.label :Статус_задания %><br />
	<%= f.select :task_status_id, TaskStatus.all.map { |i| [i.title, i.id] } %>
  </p>
  <p>
    <%= f.submit 'Обновить' %>
  </p>
<% end %>

<%= link_to 'Отобразить', project_task_path(@project,@task) %> |
<%= link_to 'Список задач', project_tasks_path(@project) %>
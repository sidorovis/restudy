<h1>Редактирование ошибки по проекту '<%= @project.title %>' по версии '<%= @build.title %>'</h1>

<% form_for([@project,@build,@bug]) do |f| %>
  <%= solve_errors(f) %>

  <p>
    <%= f.label :Название %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Описание %><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <p>
    <%= f.label :Шаги_для_повторения %><br />
    <%= f.text_area :steps_to_reproduce, :rows => 5 %>
  </p>
  <p>
    <%= f.label :Статус_ошибки %><br />
    <%= f.select :bug_status_id, BugStatus.all.map { |i| [i.title, i.id] }  %>
  </p>
  <p>
    <%= f.submit 'Обновить' %>
  </p>
<% end %>

<%= link_to 'Отобразить', [@project,@build,@bug] %> |
<%= link_to 'К списку', project_build_bugs_path(@project,@build) %><br/>
<%= link_to 'Страница версии', [@project,@build] %>
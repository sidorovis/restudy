<h1>Новая ошибка по проекту '<%= @project.title %>' по версии '<%= @build.title %>'</h1>

<% form_for([@project, @build, @bug]) do |f| %>
  <%= solve_errors(f) %>

  <p>
    <%= f.label :Название %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Описание %><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <p>
    <%= f.label :Шаги_для_повторения %><br />
    <%= f.text_area :steps_to_reproduce, :rows => 5 %>
  </p>
    <%= f.hidden_field :bug_status_id, :value => 1 %>
  <p>
    <%= f.submit 'Создать' %>
  </p>
<% end %>

<%= link_to 'К списку', project_build_bugs_path(@project, @build) %><br/>
<%= link_to 'Страница версии', [@project,@build] %>
